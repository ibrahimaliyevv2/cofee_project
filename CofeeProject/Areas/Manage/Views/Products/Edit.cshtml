@model Product
@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="col-md-10">
        <h1>Edit current product</h1>
        <form asp-action="edit" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label asp-for="Name">Product name</label>
    <input asp-for="Name" type="text" class="form-control" placeholder="Enter Name">
  </div>
    <div class="form-group">
        <label asp-for="Description">Product description</label>
        <input asp-for="Description" type="text" class="form-control" placeholder="Enter description">
    </div>
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Image">
        <img class="w-15" src="~/uploads/products/@Model.ImageUrl" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Product price</label>
        <input asp-for="Price" type="number" class="form-control" placeholder="Enter price">
    </div>
    <div class="form-group">
        <label asp-for="Category.Name">Category</label>
        @Html.DropDownListFor(model => model.CategoryId, ViewBag.ProductCategories as SelectList, "-- Select Category --", new{@class="form-control"})
    </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
    </div>
</div>


