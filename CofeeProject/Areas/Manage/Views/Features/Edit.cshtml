@model AboutFeature
@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="col-md-10">
        <h1>Edit about page</h1>
        <form asp-action="edit" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label asp-for="Title1">Title1</label>
    <input asp-for="Title1" type="text" class="form-control" placeholder="Enter Title1">
  </div>
    <div class="form-group">
        <label asp-for="Title2">Title2</label>
        <input asp-for="Title2" type="text" class="form-control" placeholder="Enter Title2">
    </div>
    <div class="form-group">
        <label asp-for="Title3">Title3</label>
        <input asp-for="Title3" type="text" class="form-control" placeholder="Enter Title3">
    </div>
    <div class="form-group">
        <label asp-for="Description1">Feature description1</label>
        <textarea asp-for="Description1" type="text" class="form-control" placeholder="Enter description1" rows="7"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Description2">Feature description2</label>
        <textarea asp-for="Description2" type="text" class="form-control" placeholder="Enter description2" rows="7"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Description3">Feature description3</label>
        <textarea asp-for="Description3" type="text" class="form-control" placeholder="Enter description3" rows="7"></textarea>
    </div>
    <div class="form-group">
                <label asp-for="AddedText1">Feature AddedText1</label>
                <input asp-for="AddedText1" type="text" class="form-control" placeholder="Enter AddedText1">
    </div>
    <div class="form-group">
        <label asp-for="AddedText2">Feature AddedText2</label>
        <input asp-for="AddedText2" type="text" class="form-control" placeholder="Enter AddedText2">
    </div>
    <div class="form-group">
        <label asp-for="AddedText3">Feature AddedText3</label>
        <input asp-for="AddedText3" type="text" class="form-control" placeholder="Enter AddedText3">
    </div>
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Image">
        <img class="w-15" src="~/uploads/about/@Model.ImageUrl" />
    </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
    </div>
</div>


